<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hrbhd.bady.domain.Page" table="t_page"
		catalog="hdbady">
		<id name="id" type="java.lang.String">
			<column name="id" />
			<generator class="uuid" />
		</id>

		<!-- 1 -->
		<property name="name" type="java.lang.String">
			<column name="name" length="32" />
		</property>
		<property name="code" type="java.lang.String">
			<column name="code" length="32" />
		</property>
		 <set name="roles" table="role_page" catalog="hdbady">
            <key>
                <column name="page_id" length="32" not-null="true" />
            </key>
            <many-to-many entity-name="com.hrbhd.bady.domain.Role">
                <column name="role_id" length="32" not-null="true" />
            </many-to-many>
        </set> 

	</class>
</hibernate-mapping>